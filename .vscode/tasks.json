{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make autojobs=true",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build_debug",
            "type": "shell",
            "command": "make autojobs=true debug=true",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build_debug_grey_bg",
            "type": "shell",
            "command": "make autojobs=true debug=true CXXFLAGS=-DM_SVGREN_BACKGROUND=0xff808080",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "(cd ${workspaceFolder}/tests/render && LD_LIBRARY_PATH=../../src/build ./tests ../samples/testdata/use.svg)",
            "problemMatcher": [],
            "dependsOn": "build"
        },
        {
            "label": "run_debug",
            "type": "shell",
            "command": "(cd ${workspaceFolder}/tests/render && LD_LIBRARY_PATH=../../src/build ./tests ../samples/testdata/tiger.svg out.png)",
            "problemMatcher": [],
            "dependsOn": "build_debug",
            // "dependsOn": "build_debug_grey_bg"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": []
        },
        {
            "label": "rebuild",
            "type": "shell",
            "command": "make re",
            "dependsOn": [
                "clean",
                "build"
            ],
            "problemMatcher": []
        },
        {
            "label": "test",
            "type": "shell",
            "command": "make test",
            "problemMatcher": [],
            "dependsOn": "build"
        },
        {
            "label": "test_debug",
            "type": "shell",
            "command": "make test debug=true",
            "problemMatcher": [],
            "dependsOn": "build_debug"
        }
    ]
}
