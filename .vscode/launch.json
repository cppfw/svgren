{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug render",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/tests/render/tests",
            "args": ["${workspaceFolder}/tests/samples/testdata/linear_gradient.svg"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/tests/render",
            "environment": [{"name": "LD_LIBRARY_PATH", "value": "../../src/build"}],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build_debug"
        },
        {
            "name": "debug checksvg",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/tests/samples/checksvg",
            "args": ["${workspaceFolder}/tests/samples/testdata/mouse.svg", "${workspaceFolder}/tests/samples/testdata/mouse.png"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/tests/render",
            "environment": [{"name": "LD_LIBRARY_PATH", "value": "../../src/build"}],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build_debug"
        }
    ]
}