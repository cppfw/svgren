pkgname=svgren
pkgver=$PACKAGE_VERSION
pkgrel=1
arch=('x86_64' 'armv7h' 'aarch64')
epoch=
pkgdesc="SVG rendering library in C++"
url="http://github.com/cppfw/${packageName}"
license=('MIT')
groups=()

depends=(
	"utki"
	"svgdom"
	"veg"
	"rasterimage"
)

makedepends=(
	'myci'
	'prorab'
	'prorab-extra'
	'doxygen'
	"clang" # for clang-tidy and clang-format
	"r4"
	"clargs"
	"tst"
	"libx11"
)
checkdepends=('myci')
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=() # do not download any sources
noextract=()
md5sums=()
validpgpkeys=()

rootDir=$(pwd)/.. # project root directory

prepare() {
	cd "$rootDir"
}

build() {
	cd "$rootDir"
	# TODO: turn on lint when arch adopts more modern clang-tidy
	make lint=off
}

check() {
	cd "$rootDir"
	# TODO: figure out why tests fail, probably due to undeterminism in floating point operations
	# make test
}

package() {
	cd "$rootDir"
	make DESTDIR="$pkgdir" PREFIX=/usr install
}
